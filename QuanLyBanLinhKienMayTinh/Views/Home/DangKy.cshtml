
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/_ProductLayout.cshtml";
    <style>
        #TaiKhoanTV, #Matkhau {
            width: 100%;
            padding: 1em;
            margin: 1em 0;
            background: none;
            outline: none;
            border: 1px solid #A09F9F;
            -webkit-appearance: none;
        }
    </style>
}


<h3 style="color:red">@ViewBag.Message</h3>
<div class=" DangKy">
    <div class=" register">
        <h1>ĐĂNG KÝ THÀNH VIÊN</h1>
        @using (Html.BeginForm())
        {
            <div class="col-md-4 register-top-grid">
                <h3>THÔNG TIN CÁ NHÂN</h3>
                <div>
                    <span>Họ Tên</span>
                    @Html.TextBox("HoTen")
                </div>
                <div>
                    <span>Địa chỉ</span>
                    @Html.TextBox("DiaChi")
                </div>
                <div>
                    <span>Email</span>
                    @Html.TextBox("Email")
                </div>
                <div>
                    <span>Số điện thoại</span>
                    @Html.TextBox("DienThoai")
                </div>
                <a class="news-letter" href="#">
                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>NHẬN THÔNG BÁO</label>
                </a>

            </div>
            <div class="col-md-4 register-bottom-grid">
                <h3>THÔNG TIN TÀI KHOẢN</h3>
                <div>
                    <span>Tài khoản</span>
                    @Html.TextBox("TaiKhoanTV")
                </div>
                <div>
                    <span>Password</span>
                    @Html.Password("Matkhau")
                </div>
                <input type="submit" value="Đăng ký">

            </div>
            <div class="clearfix"> </div>
        }


    </div>
</div>

