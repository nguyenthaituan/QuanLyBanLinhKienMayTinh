        <div class="wrapper ">
            <div class="sidebar" data-color="purple" data-background-color="white">
            </div>
            <div class="main-panel">
                <div class="content">
                    <div class="container-fluid">
                        <div class="row" style="text-align:center">


                            <div class="col-lg-3 col-md-6 col-sm-6">
