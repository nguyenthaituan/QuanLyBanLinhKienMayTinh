                            </div>

                            <div class="col-lg-3 col-md-6 col-sm-6">
                                <div class="card card-stats" id="more">
                                    <div class="card-header card-header-danger card-header-icon">
                                        <div class="card-icon">
                                            <i class="material-icons">info_outline</i>
                                        </div>
                                        <p class="card-category">Tổng đơn đặt hàng</p>
                                        <h3 class="card-title">@ViewBag.TongDDH</h3>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 col-sm-6" style="margin-top:30px">
                                <div class="card card-stats">
                                    <div class="card-header card-header-info card-header-icon">
                                        <div class="card-icon">
                                            <i class="fa fa-twitter"></i>
                                        </div>
                                        <p class="card-category">Tổng thành viên</p>
                                        <h3 class="card-title">@ViewBag.TongThanhVien</h3>
                                    </div>
                                   
                                </div>
                            </div>
