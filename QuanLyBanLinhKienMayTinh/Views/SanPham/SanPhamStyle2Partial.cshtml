@using QuanLyBanLinhKienMayTinh.Models
@model IEnumerable<SANPHAM>
@{
    var cauHinh = "";
}


<div class="col-md-6 men">
    <a href="@Url.Action("XemChiTiet","SanPham", new {id = Model.ElementAt(0).MaSP })" class="b-link-stripe b-animate-go  thickbox">
        <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/" + Model.ElementAt(0).HinhAnh)" alt="" style="width: 600px; height: 477px; ">
        <div class="b-wrapper">
            <h3 class="b-animate b-from-top top-in   b-delay03 ">
                <span style="font-size: 15pt;">
                    @{
                        string a = Model.ElementAt(0).CauHinh.ToString();
                        cauHinh += "-";
                        for (int i = 1; i < a.Length; i++)
                        {
                            if (a[i] == '-')
                            {
                                cauHinh += "</br>";

                            }
                            cauHinh += a[i];
                        }
                    }
                    @Html.Raw(cauHinh)
                </span>
            </h3>
        </div>
    </a>

</div>
